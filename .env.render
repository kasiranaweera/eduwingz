# Template for Render environment variables
# Set these in your Render dashboard environment variables

DEBUG=False
SECRET_KEY=your-secret-key-here

# Database URL will be automatically set by Render
# DATABASE_URL=postgresql://...

# CORS settings - update with your Render domain
ALLOWED_HOSTS=your-app-name.onrender.com,localhost

# FastAPI settings (if needed)
FASTAPI_URL=https://your-fastapi-url.onrender.com

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
